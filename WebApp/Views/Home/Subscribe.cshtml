@using Infrastructure.Entities
@model SubscriberEntity

@{
    ViewData["Title"] = "Subscribe";
}

@if (ViewData["Subscribed"] != null && bool.TryParse(ViewData["Subscribed"].ToString(), out bool subscribed) && subscribed)
{
    <div>Thank you for subscribing!</div>
}

<form asp-action="Subscribe" asp-controller="Home" method="post">
    <input asp-for="@Model.Email" />
    <button type="submit">Subscribe</button>
</form>